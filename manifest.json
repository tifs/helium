{
  "manifest_version": 2,
  "name": "Helium!",
  "description": "Inflate the internet",
  "version": "1.0",
  "homepage_url": "http://tifslama.com/",

  "browser_action": {
    "name": "Mouseover to inflate",
    "default_icon": "helium_logo_2x.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  // "content_scripts": [
  //   {
  //       "matches": ["http://*/*", "https://*/*"],
  //       "css": ["style.css"],
  //       "js": ["jquery-1.11.1.min.js"]
  //   }
  // ],

  "permissions": [
    "background",
    "tabs",
    "notifications",
    "<all_urls>",
    "file:///*/*",
    "file://*/*",
    "http://*/*",
    "activeTab",
    "pageCapture"
  ]


}